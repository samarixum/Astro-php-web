{
    "name": "astrophp",
    "version": "1.0.0",
    "author": "Superposition <https://github.com/samarixum>",
    "homepage": "",
    "scripts": {
        "this script is used to build the project files this is the main build command": "",
        "build": "npm-run-all astro-check:1 php-commentout:2 compile-html:3 html-format:4 php-uncomment:5 rename:6 generate-webp:7 copy-assets:8 js:9 ts:10 css-compile:11 copy-php:12",
        "1 ' ' ' ' ' ' ' ' ": "",
        " check astro ": "",
        "astro-check:1": "astro --config Build-Configs/astro.config.mjs check --verbose",
        "2 ' ' ' ' ' ' ' ' ": "",
        " node script to comment out php code in astro source to prevent astro build errors ": "",
        "php-commentout:2": "node Build-Configs/astro.commentout-php.mjs",
        "3 ' ' ' ' ' ' ' ' ": "",
        " astro build command for compiling html ": "",
        "compile-html:3": "astro --config Build-Configs/astro.config.mjs build",
        "4 ' ' ' ' ' ' ' ' ": "",
        " format output html ": "",
        "html-format:4": "js-beautify -r --type html --no-preserve-newlines Distribution-Build-Output/**/*.html",
        "5 ' ' ' ' ' ' ' ' ": "",
        " remove html comments around php code blocks in astro source and build output, run this manually if the build failes before this point ": "",
        "php-uncomment:5": "node Build-Configs/astro.uncomment-php.mjs",
        "6 ' ' ' ' ' ' ' ' ": "",
        " node script to rename output .html files to .phtml ": "",
        "rename:6": "node Build-Configs/phtml.rename.mjs",
        "7 ' ' ' ' ' ' ' ' ": "",
        " generate webp images ": "",
        "generate-webp:7": "node Build-Configs/images.mjs",
        "8 ' ' ' ' ' ' ' ' ": "",
        " copy contents of assets folder to build dir ": "",
        "copy-assets:8": "node Build-Configs/assets.mjs",
        "9 ' ' ' ' ' ' ' ' ": "",
        " copy source js to build js dir ": "",
        "js:9": "node Build-Configs/js.mjs",
        "10 ' ' ' ' ' ' ' ' ": "",
        " compile type script to outdir ": "",
        "ts:10": "npx tsc",
        "11 ' ' ' ' ' ' ' ' ": "",
        " generate css ": "",
        "css-compile:11": "sass --style expanded --load-path=\"node_modules\" --source-map --embed-sources --no-error-css sourceCode/css/:Distribution-Build-Output/data/css/",
        "css-compile-silent:11": "sass --style expanded --load-path=\"node_modules\" --source-map --embed-sources --no-error-css sourceCode/css/:Distribution-Build-Output/data/css/ -q",
        "12 ' ' ' ' ' ' ' ' ": "",
        " copy .php files from sourcecode/html to build dir ": "",
        "copy-php:12": "node ./Build-Configs/php-files.mjs"
    },
    "devDependencies": {
        "@astrojs/check": "^0.9.4",
        "astro": "^5.0.8",
        "js-beautify": "^1.15.1",
        "npm-run-all": "4.1.5",
        "sass": "1.82.0",
        "sharp": "^0.33.5",
        "typescript": "^5.7.2"
    }
}
